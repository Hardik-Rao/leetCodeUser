<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LeetCode User Summary</title>
</head>
<body>
    <h1>LeetCode User Summary</h1>

    <!-- Display Ranking -->
    <p><strong>Global Ranking:</strong> <%= ranking %></p>

    <!-- Display Contest Ranking -->
    <p><strong>Contest  Rating:</strong> <%= contestRating %></p>

    <!-- Problems Solved -->
    <p><strong>Total Problems Solved:</strong> <%= problemsSolved %></p>

    <!-- Total Submissions -->
    <p><strong>Total Submissions:</strong> <%= totalSubmissions %></p>
    
    <!-- Badges -->
    <h2>Badges Earned</h2>
    <% if (badges && badges.length > 0) { %>
        <p><%= badgesCount %> badge(s) earned</p>
        <ul>
            <% badges.forEach(badge => { %>
                <li>
                    <img src="<%= badge.icon %>" alt="<%= badge.displayName %>" style="width: 50px; height: 50px;">
                    <strong><%= badge.displayName %></strong> (Earned on <%= badge.creationDate %>)
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No badges earned yet</p>
    <% } %>
</body>
</html>

